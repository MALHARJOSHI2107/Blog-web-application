<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Welcome to Jot it down ðŸ«‚</title>
</head>
<body>
  <h1>JOT IT DOWN</h1>
  <a href="/posts/new"><button class="btn">Create a POST</button></a>
  <div>
    <% posts.forEach(post => { %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <a href="/posts/<%= post.id %>/edit">Edit</a>
        <form action="/posts/<%= post.id %>/delete" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
